<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_background"
        android:paddingHorizontal="@dimen/outer_margin"
        android:paddingVertical="@dimen/inner_margin"
        android:text="@string/your_profile_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/major_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/profile_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/outer_margin"
        android:background="@drawable/layout_card_bg"
        app:layout_constraintBottom_toBottomOf="@id/profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_title" />

    <TextView
        android:id="@+id/profile_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/outer_margin"
        android:layout_marginTop="@dimen/inner_margin"
        android:paddingTop="@dimen/inner_margin"
        android:text="ПРОФИЛЬ:"
        android:textColor="@color/card_title"
        android:textSize="@dimen/major_text_size"
        app:layout_constraintLeft_toLeftOf="@id/profile_background"
        app:layout_constraintRight_toRightOf="@id/profile_background"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/outer_margin"
        android:paddingVertical="@dimen/inner_margin"
        android:text="Енгош Лорпав\n+78005553535"
        android:textColor="@color/white"
        android:textSize="@dimen/major_text_size"
        app:layout_constraintLeft_toLeftOf="@id/profile_background"
        app:layout_constraintRight_toRightOf="@id/profile_background"
        app:layout_constraintTop_toBottomOf="@id/profile_title" />

    <View
        android:id="@+id/dispatcher_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/outer_margin"
        android:background="@drawable/layout_card_bg"
        app:layout_constraintBottom_toBottomOf="@id/dispatcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/dispatcher_title" />

    <TextView
        android:id="@+id/dispatcher_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/outer_margin"
        android:layout_marginTop="@dimen/inner_margin"
        android:paddingTop="@dimen/inner_margin"
        android:text="ДИСПЕТЧЕР:"
        android:textColor="@color/card_title"
        android:textSize="@dimen/major_text_size"
        app:layout_constraintLeft_toLeftOf="@id/dispatcher_background"
        app:layout_constraintRight_toRightOf="@id/dispatcher_background"
        app:layout_constraintTop_toBottomOf="@id/profile_background" />

    <TextView
        android:id="@+id/dispatcher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/outer_margin"
        android:paddingVertical="@dimen/inner_margin"
        android:text="+7 800 555 35 35"
        android:textColor="@color/white"
        android:textSize="@dimen/major_text_size"
        app:layout_constraintLeft_toLeftOf="@id/dispatcher_background"
        app:layout_constraintRight_toRightOf="@id/dispatcher_background"
        app:layout_constraintTop_toBottomOf="@id/dispatcher_title" />

    <View
        android:id="@+id/required_vehicle_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/outer_margin"
        android:background="@drawable/layout_card_bg"
        app:layout_constraintBottom_toBottomOf="@id/required_vehicle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/required_vehicle_title" />

    <TextView
        android:id="@+id/required_vehicle_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/outer_margin"
        android:layout_marginTop="@dimen/inner_margin"
        android:paddingTop="@dimen/inner_margin"
        android:text="ДОСТУПНАЯ ТЕХНИКА"
        android:textColor="@color/card_title"
        android:textSize="@dimen/major_text_size"
        app:layout_constraintLeft_toLeftOf="@id/required_vehicle_background"
        app:layout_constraintRight_toRightOf="@id/required_vehicle_background"
        app:layout_constraintTop_toBottomOf="@id/dispatcher_background" />

    <TextView
        android:id="@+id/required_vehicle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/outer_margin"
        android:paddingVertical="@dimen/inner_margin"
        android:text="Погрузчик_Вилочный_Диз_3т/6м,\nПогрузчик_Вилочный_Диз_3т/6м,\nПогрузчик_Вилочный_Диз_3т/6м"
        android:textColor="@color/white"
        android:textSize="@dimen/major_text_size"
        app:layout_constraintLeft_toLeftOf="@id/required_vehicle_background"
        app:layout_constraintRight_toRightOf="@id/required_vehicle_background"
        app:layout_constraintTop_toBottomOf="@id/required_vehicle_title" />

</androidx.constraintlayout.widget.ConstraintLayout>